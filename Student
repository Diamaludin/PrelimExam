class Student
{
// the private data members
private int IDnum;
private int Chours;
private int pointsA;
private static int lastStudentID;
 
// the public get and set methods
 
public void setIDnum()
{
lastStudentID += 1;
IDnum= lastStudentID;
}
 
public int getIDnum()
{
return IDnum;
}
 
public void setCHours(int number)
{
hours = number;
}
 
public int getHours()
{
return Chours;
}
 
public void setPointsA(int number)
{
points = number;
}
 
public int getPointsA()
{
return pointsA;
}
 
// methods to display the fields
 
public void showIDnum()
{
System.out.println("ID Number is: " + IDnum);
}
 
public void showHours()
{
System.out.println("Credit Hours: " + Chours);
}
 
public void showPoints()
{
System.out.println("Points Earned: " + pointsA);
}
 
public double getGradePoint()
{
return (double) (pointsA / Chours);
}
 
}
 
